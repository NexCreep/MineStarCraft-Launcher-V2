<Page x:Class="MineStarCraft_Launcher.Pages.ModManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MineStarCraft_Launcher.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      Loaded="Page_Loaded"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModManager">

    <StackPanel VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <fa:FontAwesome Name="iconInfo" Icon="None" FontSize="30" Foreground="Green" VerticalAlignment="Center" Margin="10 0"/>
            <TextBlock Name="shortInfo" FontSize="30" Foreground="White">Checking...</TextBlock>
        </StackPanel>
        <TextBlock Name="longInfo" FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>

<Window x:Class="MineStarCraft_Launcher.ForgeGuide"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineStarCraft_Launcher"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Title="Guia de instalacion de Forge" Height="450" Width="360">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Margin="15,20" FontSize="16">
            Siga los pasos de la imagen:
        </TextBlock>
        <Image Source="./Assets/App/svg/forge_guide.png" 
               Width="310"/>
        <Button Content="Ya esta, instalado!" Margin="100 20" Padding="10" Click="Button_Click"/>
    </StackPanel>
</Window>
